{
	"compilerOptions": {
		"allowJs": true,
		"typeRoots": ["./node_modules/@types", "./typings"],
		"moduleResolution": "node",
		"sourceMap": true,
		"strict": true,
		"target": "esnext",
		"module": "commonjs",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"declaration": true,
		"outDir": "lib"
	},
	"include": ["./src/**/*", "./typings/**/*"],
	"exclude": ["./node_modules/**/*"]
}
